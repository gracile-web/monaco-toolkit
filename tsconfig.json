{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": false
  },
  "include": ["src/**/*.ts", "worker-superclass.d.ts"],
  "exclude": ["node_modules", "dist"]
}
